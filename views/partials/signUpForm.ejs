<div class="container">
    <div class="card bg-light " style="width: 600px; margin-left: 250px; margin-top: 100px;">
        <article class="card-body mx-auto" style="max-width: 300px;">
            <form onsubmit="return mySubmitFunction(event)">
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>
                    <input name="" class="form-control" placeholder="First Name" type="text" id="firstName" onkeyup="handle(this.id)">
                    
                </div> <!-- form-group// -->
                <p id="firstNameP">required</p>
                
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-users" style="width: 15px;" ></i> </span>
                    </div>
                    <input name="" class="form-control" placeholder="Last Name" type="text" id="lastName" onkeyup="handle(this.id)">
                    
                </div> <!-- form-group// -->
                <p id="lastNameP">required</p>
                <div class="form-group input-group">
                    <div class="input-group-prepend" style="margin-right: 10px;">
                        <span class="input-group-text"> <i class="fas fa-transgender-alt" style="height: 20px;"></i> </span>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="male" value="option1" onclick="handle(this.id)">
                        <label class="form-check-label" for="inlineCheckbox1">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="female" value="option2" onclick="handle(this.id)">
                        <label class="form-check-label" for="inlineCheckbox2">Female</label>
                    </div> <!-- form-group end.// -->
                    
                </div><!-- form-group// -->
                <p id="sexP">required</p>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user" aria-hidden="true"></i> </span>
                    </div>
                    <input name="" class="form-control" placeholder="Username" type="text" id="userName" onkeyup="handle(this.id)">
                    
                </div>
                <p id="usernameP">required</p>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Create password" type="password" id="pass" onkeyup="handle(this.id)">
                    
                </div> <!-- form-group// -->
                <p id="passP">required</p>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Repeat password" type="password" id="passCom" onkeyup="handle(this.id)">
                    
                </div> <!-- form-group// -->
                <p id="passComP">required</p>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-mobile" style="width:14px;" ></i> </span>
                    </div>
                    <input name="" class="form-control" placeholder="Phone Number" type="text" id="mobile" onkeyup="handle(this.id)">
                    
                </div> <!-- form-group// -->
                <p id="mobileP">required</p>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" onclick="signUp()"> Create Account </button>
                </div> <!-- form-group// -->
                <p class="text-center">Have an account? <a href="login">Log In</a> </p>
            </form>
        </article>
    </div> <!-- card.// -->

</div>